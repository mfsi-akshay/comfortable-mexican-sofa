<div class="page-header">

<h1>New Locale Page</h1>
</div>
<%= form_for @locale_page, url: { action: :edit_locale }, html: { multipart: :true, class: "form-horizontal" } do |form| %>
  <%= hidden_field_tag "page_id", @locale_page.page.id %>
  <div class="form-group">
    <%= form.label :label, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :label, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label "Select Locale", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= form.select :locale, options_for_select(available_locales.collect { |locale| [ locale[:name], locale[:id] ] }, @locale_page.locale), class: "form-control"%>
    </div>
  </div>
  <%= render 'locale_form_blocks' %>
<%= form.submit "Update", class: "btn btn-success" %>
<% end %>
